
@model Films.Models.MovieGenreViewModel


@{
    ViewData["Title"] = "Index";
}

<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>



<h1>FILMS</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-secondary ">Create New</a>
</p>
<div class="">
    <form asp-controller="Movies" asp-action="Index" method="get">


        <ul class="list-group list-group-horizontal">
            <li class="list-group-item">
                Genre: <select asp-for="MovieGenre" asp-items="Model.Genres">
                    <option value="">All</option>
                </select>
            </li>
            <li class="list-group-item"> Title: <input type="text" name="SearchStringTitle" /></li>
            <li class="list-group-item">
                Director: <input type="text" name="SearchStringDirector" />
                <input type="submit" value="Filter" />
            </li>

        </ul>


    </form>
</div>

<br />
<div style="overflow-y:auto;">
    <table class="table table-hover">
        <thead>
            <tr style=" background-color: azure; ">
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].InMovieList)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Director)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Score)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr style=" background-color:white ">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InMovieList)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Director)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn " asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" class="btn " asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" class="btn " asp-route-id="@item.Id">Delete</a>
                        <asp:CheckBox ID=“CheckBox1“ runat=“server“ />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <br />
    <br />
